.page-header style="background-image: url('/images/hero-photo/slider-2-blur.jpg')"
  .page-header-inner
    h2.page-title
      span.ch 我要報名
      span.en Register

.register
  .activities-name
    .block-title 活動名稱
    h2.name 與音樂作伴，認識古典音樂講座

  .activities-price
    .block-title 活動費用
    .form
      .form-row
        .form-label 費用項目一
        .form-content.number $#{rand(10000)}

      .form-row
        .form-label 費用項目二
        .form-content.number $#{rand(10000)}

      .form-row
        .form-label 費用項目三
        .form-content.number $#{rand(10000)}

      hr

      .form-row
        .form-label 總計
        .form-content.number.total $#{rand(100000)}

  .register-from
    .block-title 報名資訊
    ul.step-flow
      li.step.complete
        .number 1
        .title 填寫聯絡資訊
      li.step.complete
        .number 2
        .title 填寫個人資訊
      li.step.complete
        .number 3
        .title 填寫其他資訊
      li.step.now
        .number 4
        .title 確認資訊

    .step-confirm
      .confirm-title
        h3.title 1.聯絡資訊
        a.btn href="/register/study-abroad/step1.html" 修改

      .form
        .form-row
          .form-label.required 中文姓名
          .form-content = zh_lorem_name

        .form-row
          .form-label.required 性別
          .form-content 女

        .form-row
          .form-label.required 聯絡電話
          .form-content 0912345678

        .form-row
          .form-label.required 電子信箱
          .form-content = lorem_email

        .form-row
          .form-label 通訊地址
          .form-content 新北市汐止區大同路1段369號

    .step-confirm
      .confirm-title
        h3.title 2.個人資訊
        a.btn href="/register/study-abroad/step2.html" 修改

      .form
        .form-row
          .form-label 護照姓名
